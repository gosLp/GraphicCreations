<section class="relative h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-fuchsia-900 via-fuchsia-700 to-fuchsia-900">
  <!-- Animated background shapes -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -left-4 top-1/4 w-24 h-24 bg-white/10 rounded-full blur-xl"></div>
    <div class="absolute right-20 top-1/3 w-32 h-32 bg-purple-500/20 rounded-full blur-xl"></div>
    <div class="absolute left-1/4 bottom-1/4 w-40 h-40 bg-red-500/20 rounded-full blur-xl"></div>
  </div>

  <div class="relative z-10 text-center px-4">
    <!-- Hidden on desktop, visible on mobile -->
    <h1 class="md:hidden text-6xl font-bold text-white mb-6 tracking-tight flex flex-col items-start">
      <span class="block">Creative</span>
      <span class="block">Design</span>
      <span class="block">Solutions.</span>
    </h1>
    
    <!-- Visible on desktop, hidden on mobile -->
    <h1 class="hidden md:block text-8xl font-bold text-white mb-6 tracking-tight">
      Creative Design Solutions
    </h1>
    <p class="text-xl text-white/90 mb-12 max-w-2xl mx-auto">
      A Complete Designing & Printing Solution
    </p>
    
    <div class="flex flex-wrap justify-center gap-4">
      <a 
        href="#featured" 
        class="inline-flex items-center px-8 py-3 bg-white text-purple-700 rounded-full font-semibold shadow-lg hover:bg-purple-50 transition duration-300"
      >
        View Our Work
      </a>
      <a 
        href="#contact" 
        class="inline-flex items-center px-8 py-3 border-2 border-white text-white rounded-full font-semibold hover:bg-white/10 transition duration-300"
      >
        Get in Touch
      </a>
    </div>
  </div>
</section>

<script>
  // Add smooth scrolling functionality
  document.querySelector('a[href="#featured"]')?.addEventListener('click', (e) => {
    e.preventDefault();
    const portfolioSection = document.getElementById('featured');
    portfolioSection?.scrollIntoView({ behavior: 'smooth' });
  });
</script>